		<class>com.bl.entity.OrderEntity</class>
		<class>com.bl.entity.cms.LoginUserEntity</class>
		<class>com.bl.entity.CitiesDistrictEntity</class>
		<class>com.bl.entity.CountryEntity</class>
		<class>com.bl.entity.CurrencyEntity</class> 
		<class>com.bl.entity.GovernorateEntity</class>
		<class>com.bl.entity.cms.SettingEntity</class>
		<class>com.bl.entity.cms.BrandEntity</class>
		<class>com.bl.entity.cms.ItemBrandEntity</class>
