<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" 
					   xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
					   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
					   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
					   
	<persistence-unit name="jpa" transaction-type="RESOURCE_LOCAL"> 	
		
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.bl.entity.CategoryEntity</class>
		<class>com.bl.entity.ItemEntity</class>
		<class>com.bl.entity.ColorsEntity</class>
		<class>com.bl.entity.ItemSpecificationsEntity</class>
		<class>com.bl.entity.CustomersEntity</class>
		<class>com.bl.entity.CustomerReviewsEntity</class>
		<class>com.bl.entity.OrderItemEntity</class>
		<class>com.bl.entity.OrderStatusEntity</class>
		<class>com.bl.entity.OrderEntity</class>
		<class>com.bl.entity.cms.LoginUserEntity</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/stock"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
